{
  "name": "ROS 2 Development (Ubuntu)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "postCreateCommand": "apt update && apt install -y curl gnupg2 lsb-release",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "vscode-icons-team.vscode-icons",
        "GitHub.codespaces"
      ]
    }
  },
  "remoteUser": "vscode"
}